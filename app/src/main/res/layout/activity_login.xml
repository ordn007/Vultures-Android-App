<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:background="@color/dark_theme_background"
            android:id="@+id/login_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">


        <!--App Names-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="100dp"
                android:padding="25dp">
            <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/glow_green"
                    android:gravity="center"
                    android:text="@string/login_title_label"
                    android:textSize="24sp"/>
        </LinearLayout>


        <!--Text Fields-->
        <EditText
                android:id="@+id/login_userName_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/glow_green1"
                android:textColor="@color/glow_green"
                android:textAlignment="center"
                android:text=""
                android:hint="User Name"/>

        <EditText
                android:id="@+id/login_password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/glow_green1"
                android:textColor="@color/glow_green"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:hint="Password"/>


        <!--Buttons-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="25dp"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/login_btn_reset"
                    android:text="Reset"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <Button
                    android:id="@+id/login_btn_submit"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/glow_green1"
                android:text="or"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>

        <Button
                android:layout_gravity="center"
                android:id="@+id/google_sign_in"
                android:text="Continue with ..."
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <!--Go to SignUp Page-->
        <!--<TextView-->
                <!--android:textColor="@color/white"-->
                <!--android:id="@+id/link_signUp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center|bottom"-->
                <!--android:text="@string/new_account"-->
                <!--android:textSize="16dip" />-->

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

