<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:background="@drawable/background"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/login_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!--App Names-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/glow_green"
                    android:layout_margin="10dp"
                    android:text="@string/sign_up_title_label"
                    android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <!--Text Fields-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <EditText
                android:id="@+id/Name_field"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:textColorHint="@color/glow_green1"
                android:textColor="@color/glow_green"
                android:layout_marginLeft="25.0dip"
                android:layout_marginRight="25.0dip"

                android:hint="Name"/>

                <EditText
                android:id="@+id/email_field"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:textColorHint="@color/glow_green1"
                android:textColor="@color/glow_green"
                android:layout_marginLeft="25.0dip"
                android:layout_marginRight="25.0dip"
                android:hint="Email Address"/>

                <EditText
                android:id="@+id/signUp_userName_field"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:textColorHint="@color/glow_green1"
                android:textColor="@color/glow_green"
                android:layout_marginLeft="25.0dip"
                android:layout_marginRight="25.0dip"
                android:hint="User Name"/>

                <EditText
                android:id="@+id/signUp_password_field"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:textColorHint="@color/glow_green1"
                android:textColor="@color/glow_green"
                android:inputType="textPassword"
                android:layout_marginLeft="25.0dip"
                android:layout_marginRight="25.0dip"
                android:hint="Password"/>
                <EditText
                android:id="@+id/signUp_password_field2"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:textColorHint="@color/glow_green1"
                android:textColor="@color/glow_green"
                android:inputType="textPassword"
                android:layout_marginLeft="25.0dip"
                android:layout_marginRight="25.0dip"
                android:hint="Confirm Password"/>


            </LinearLayout>

            <!--Buttons-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="2">

                <Button
                    android:id="@+id/signUp_btn_reset"
                    android:text="Reset"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham"
                    android:background="@drawable/buttonshape"/>

                <Button
                    android:id="@+id/signUp_btn_submit"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham"
                    android:background="@drawable/buttonshape"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>